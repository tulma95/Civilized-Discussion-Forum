{
  "name": "Civilized-Discussion-Forum",
  "version": "1.0.0",
  "description": "Imageboard for civilized discussion",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node backend/",
    "start:test": "cross-env NODE_ENV=test nodemon backend/",
    "build-frontend": "cd frontend/ && npm run build",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand --testTimeout=10000 --coverage",
    "test:dev": "cross-env NODE_ENV=test jest --verbose --runInBand --testTimeout=10000 --watchAll",
    "test:cy": "start-server-and-test start:test http://localhost:3003/api/threads test:front",
    "test:front": "cd frontend/ && npm run test:cy",
    "watch": "nodemon backend/",
    "seed": "sequelize db:seed:all",
    "migrate": "sequelize db:migrate",
    "pretest": "cross-env NODE_ENV=test npm run migrate:reset",
    "dev-backend": "npm run watch & cd frontend && npm run start",
    "drop-prod": "NODE_ENV=production sequelize db:drop",
    "create-prod": "NODE_ENV=production sequelize db:create",
    "migrate-db": "sequelize db:migrate"
  },
  "cacheDirectories": [
    "node_modules",
    "frontend/node_modules"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tulma95/Civilized-Discussion-Forum.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tulma95/Civilized-Discussion-Forum/issues"
  },
  "homepage": "https://github.com/tulma95/Civilized-Discussion-Forum#readme",
  "dependencies": {
    "aws-sdk": "^2.767.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.22.3",
    "sequelize-cli": "^5.5.1",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "cross-env": "^6.0.3",
    "jest": "^24.9.0",
    "nodemon": "^2.0.4",
    "start-server-and-test": "^1.11.5",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      "./frontend"
    ]
  }
}
