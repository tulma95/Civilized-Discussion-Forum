{
  "name": "Civilized-Discussion-Forum",
  "version": "1.0.0",
  "description": "Imageboard for civilized discussion",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node backend/",
    "start-dev": "cross-env NODE_ENV=development node backend/",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand --testTimeout=10000",
    "watch": "cross-env NODE_ENV=development nodemon backend/",
    "seeed": "sequelize db:seed:all",
    "migrate": "sequelize db:migrate",
    "migrate:reset": "sequelize db:migrate:undo:all && npm run migrate",
    "pretest": "cross-env NODE_ENV=test npm run migrate:reset",
    "reset-db": "sequelize db:drop & sequelize db:create & sequelize db:migrate & sequelize db:seed:all",
    "generateThread": "sequelize model:generate --name Thread --attributes title:string,user_id:integer,category:string",
    "generateUser": "sequelize model:generate --name User --attributes username:string,passwordhash:string",
    "generatePost": "sequelize model:generate --name Post --attributes thread_id:integer,user_id:integer,image:blob,content:string"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tulma95/Civilized-Discussion-Forum.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tulma95/Civilized-Discussion-Forum/issues"
  },
  "homepage": "https://github.com/tulma95/Civilized-Discussion-Forum#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pg": "^7.17.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.3",
    "sequelize-cli": "^5.5.1"
  },
  "devDependencies": {
    "cross-env": "^6.0.3",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}